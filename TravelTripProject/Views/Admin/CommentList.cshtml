@using TravelTripProject.Models.Classes
@model List<Comments>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<br />
<div class="container">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kullanıcı Adı</th>
                <th>E-mail</th>
                <th>Yorum</th>
                <th>Blok Başlığı</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.UserName</td>
                    <td>@x.Email</td>
                    <td style="width:250px">@x.Comment</td>
                    <td>@x.Blog.Title</td>
                    <td>
                        <a href="/Admin/UpdateComment/@x.Id" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-edit" title="Güncelle"></span>
                        </a>
                       
                        <a href="/Admin/DeleteComment/@x.Id" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" title="Sil"></span>
                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
   
</div>

</body>
</html>

