@model TravelTripProject.Models.Classes.AboutUs
@{
    ViewBag.Title = "UpdateAboutUs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Güncelleme Syafası</h2>
@using (Html.BeginForm("UpdateAboutUs", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.LabelFor(x => x.PhotoUrl)
    @Html.TextBoxFor(x => x.PhotoUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Explanation)
    @Html.TextAreaFor(x => x.Explanation, 7, 1, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Hakkımızda Güncelle</button>

}

