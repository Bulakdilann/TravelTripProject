@using TravelTripProject.Models.Classes
@model List<AboutUs>
@{
    ViewBag.Title = "AboutUs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Sayfası</h2>

<br />
<div class="container">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fotograf</th>
                <th>Açıklama</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.PhotoUrl</td>
                    <td>@x.Explanation</td>
                    <td>
                        <a href="/Admin/UpdateAboutUs/@x.Id" class="btn btn-success btn-xs">
                            <span class="glyphicon glyphicon-edit" title="Güncelle"></span>
                        </a>
                        <a href="/About/" class="btn btn-info btn-xs">
                            <span class="glyphicon glyphicon-search" title="Detay"></span>
                        </a>
                        <a href="/Admin/DeleteAboutUs/@x.Id" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" title="Sil"></span>
                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <a href="/Admin/NewAboutUs/" class="btn btn-primary">
        <span>Yeni Ekle</span>
    </a>
</div>



