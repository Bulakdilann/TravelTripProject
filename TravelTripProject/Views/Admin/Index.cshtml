@using TravelTripProject.Models.Classes
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
  <h2>Blog Listesi</h2>
  <br />
  <div class="container">

      <table class="table table-bordered">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Başlık</th>
                  <th></th>

              </tr>
          </thead>
          <tbody>
              @foreach (var x in Model)
              {
                  <tr>
                      <td>@x.Id</td>
                      <td>@x.Title</td>
                      <td>
                          <a href="/Admin/UpdateBlog/@x.Id" class="btn btn-success btn-xs">
                              <span class="glyphicon glyphicon-edit" title="Güncelle"></span>
                          </a>
                          <a href="/Blog/BlogDetail/@x.Id" class="btn btn-info btn-xs">
                              <span class="glyphicon glyphicon-search" title="Detay"></span>
                          </a>
                          <a href="/Admin/DeleteBlog/@x.Id" class="btn btn-danger btn-xs">
                              <span class="glyphicon glyphicon-trash" title="Sil"></span>
                          </a>
                      </td>
                  </tr>
              }


          </tbody>
      </table>
      <a href="/Admin/NewBlog/" class="btn btn-primary">
          <span>Yeni Blog</span>
      </a>
  </div>



